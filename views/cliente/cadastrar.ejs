          <label class="form-label">ID:</label>
          <input <% if(cliente.id != undefined){ %> readonly<% } %> value= "<%= cliente.id %>" type= "text" class="form-control" name= "id">
        </div>
        <div class="mb-3">
          <label class="form-label">Nome:</label>
          <input value= "<%= cliente.nome %>" type= "text" class="form-control" name= "nome">
        </div>
        <div class="mb-3">
          <label class="form-label">Idade:</label>
          <input value= "<%= cliente.idade %>" type= "text" class="form-control" name= "idade">
        </div>
          <input type= "submit" class="btn btn-primary" value="Salvar"></input>
        <a href="/">
          <input type="button" class="bnt bnt-secondary" value="<<Voltar"></a>
    </form>
        </div>
